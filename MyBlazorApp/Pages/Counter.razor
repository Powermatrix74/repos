@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<div class="blockquote">@highValue</div>

@code {
    int currentCount = 0;
    int highValue = 0;

    void IncrementCount()
    {
        currentCount++;
        if (currentCount > 10)
        {
            highValue = currentCount;
        }
    }
}
